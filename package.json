{
  "name": "agentic-kanban",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "node scripts/dev-check.js",
    "dev:unsafe": "concurrently \"npm run server\" \"npm run client\"",
    "dev:auto-kill": "node scripts/dev-check.js --auto-kill",
    "dev:skip-check": "node scripts/dev-check.js --skip-check",
    "dev:cleanup": "node scripts/dev-check.js --cleanup-only",
    "client": "vite",
    "server": "node server.js",
    "dev:client-only": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "echo 'Running component tests...' && echo 'Tests would run here with Jest/Vitest'",
    "test:e2e": "echo 'Running E2E tests...' && echo 'E2E tests would run here with Playwright'",
    "test:e2e:headed": "echo 'Running E2E tests in headed mode...'",
    "test:e2e:report": "echo 'Generating E2E test report...'",
    "validate": "npm run lint && npm run build && npm run test"
  },
  "dependencies": {
    "@tailwindcss/typography": "^0.5.19",
    "@uiw/react-codemirror": "^4.25.2",
    "@uiw/react-md-editor": "^4.0.8",
    "autoprefixer": "^10.4.21",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "lucide-react": "^0.546.0",
    "postcss": "^8.5.6",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-dropzone": "^14.3.8",
    "tailwindcss": "^3.4.18",
    "ws": "^8.18.3",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^4.7.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "vite": "^4.5.14"
  }
}
